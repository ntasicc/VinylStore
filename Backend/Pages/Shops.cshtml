@page
@using Backend.Pages
@model ShopsModel
@{
    ViewData["Title"]="Shops";
    Layout="_Layout";
}
@section Styles {
    <link rel="stylesheet" href="Styles/razorstyle.css">
}

<a class="create" href="CreateGenre">Create Genre</a>

<h2>List of all shops</h2>
<div class="table-wrapper">
<table class="fl-table">
    <thead>
    <tr>
        <th>Name</th>
        <th>Genres</th>
        <th>Create</th>
    </tr>
    </thead>
    <tbody>
    @foreach(var item in Model.Shopss)
    {
        <tr>
            <td>@item.Name</td>
            <td><a href="Genres?id=@item.ID">Show genres</a></td>
            <td><a href="CreateGenre?id=@item.ID">Create new genre</a></td>
        </tr>
    }
    </tbody>
</table>
</div>

